<UserControl x:Class="DigitalRune.Editor.Colors.ColorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dr="http://schemas.digitalrune.com/windows"
             xmlns:local="clr-namespace:DigitalRune.Editor.Colors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Margin="5"
             d:DataContext="{x:Static local:ColorViewModel.DesignInstance}"
             x:ClassModifier="internal"
             mc:Ignorable="d">
    <Grid>
        <dr:ColorPicker IsTabStop="False"
                        OldColor="{Binding OldColor}"
                        Color="{Binding Color}" />
    </Grid>
</UserControl>
