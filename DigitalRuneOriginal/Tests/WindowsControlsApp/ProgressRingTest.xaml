<UserControl x:Class="WindowsControlsApp.ProgressRingTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dr="http://schemas.digitalrune.com/windows"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Margin="11"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <CheckBox x:Name="IsActiveCheckBox" IsChecked="True">ProgressRing.IsActive</CheckBox>
            <CheckBox x:Name="IsLargeCheckBox" IsChecked="True">ProgressRing.IsLarge</CheckBox>
        </StackPanel>
        <dr:ProgressRing IsActive="{Binding IsChecked, ElementName=IsActiveCheckBox}" IsLarge="{Binding IsChecked, ElementName=IsLargeCheckBox}" />
    </Grid>
</UserControl>
