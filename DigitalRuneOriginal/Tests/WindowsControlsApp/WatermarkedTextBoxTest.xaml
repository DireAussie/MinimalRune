<UserControl x:Class="WindowsControlsApp.WatermarkedTextBoxTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dr="http://schemas.digitalrune.com/windows"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Margin="11"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <StackPanel Margin="7">
        <Label Content="Regular TextBox:" />
        <TextBox Margin="0,0,0,5" />
        <TextBox Margin="0,0,0,5" IsEnabled="False" />
        <Label Content="Watermarked TextBox:" />
        <dr:WatermarkedTextBox Margin="0,0,0,5"
                               ClearOnEscape="True"
                               SelectAllOnFocus="True"
                               Watermark="Search" />
        <dr:WatermarkedTextBox Margin="0,0,0,5"
                               ClearOnEscape="True"
                               SelectAllOnFocus="True"
                               Watermark="Go to" />
        <dr:WatermarkedTextBox Margin="0,0,0,5"
                               ClearOnEscape="True"
                               IsEnabled="False"
                               SelectAllOnFocus="True"
                               Watermark="Go to" />
    </StackPanel>
</UserControl>
