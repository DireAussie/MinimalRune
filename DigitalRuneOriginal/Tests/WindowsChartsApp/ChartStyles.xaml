<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dr="http://schemas.digitalrune.com/windows">

    <!--  Misc Styles  -->

    <Style x:Key="CollapsedPath" TargetType="{x:Type Path}">
        <Style.Setters>
            <Setter Property="Visibility" Value="Collapsed" />
        </Style.Setters>
    </Style>

    <Style x:Key="CollapsedLabel" TargetType="{x:Type TextBlock}">
        <Style.Setters>
            <Setter Property="Visibility" Value="Collapsed" />
        </Style.Setters>
    </Style>

    <Style x:Key="CollapsedTitle" TargetType="{x:Type ContentControl}">
        <Style.Setters>
            <Setter Property="Visibility" Value="Collapsed" />
        </Style.Setters>
    </Style>


    <!--  Axis Styles  -->

    <Style x:Key="AutoAxis" TargetType="{x:Type dr:Axis}">
        <Style.Setters>
            <Setter Property="AutoScale" Value="True" />
        </Style.Setters>
    </Style>

    <Style x:Key="LineOnly" TargetType="{x:Type dr:Axis}">
        <Style.Setters>
            <Setter Property="MajorTickLength" Value="0" />
            <Setter Property="MinorTickLength" Value="0" />
            <Setter Property="MajorTickStyle" Value="{StaticResource CollapsedPath}" />
            <Setter Property="MinorTickStyle" Value="{StaticResource CollapsedPath}" />
            <Setter Property="LabelStyle" Value="{StaticResource CollapsedLabel}" />
            <Setter Property="TitleStyle" Value="{StaticResource CollapsedTitle}" />
        </Style.Setters>
    </Style>

    <Style x:Key="HiddenAxis" TargetType="{x:Type dr:Axis}">
        <Style.Setters>
            <Setter Property="Visibility" Value="Hidden" />
        </Style.Setters>
    </Style>

    <Style x:Key="CollapsedAxis" TargetType="{x:Type dr:Axis}">
        <Style.Setters>
            <Setter Property="Visibility" Value="Collapsed" />
        </Style.Setters>
    </Style>


