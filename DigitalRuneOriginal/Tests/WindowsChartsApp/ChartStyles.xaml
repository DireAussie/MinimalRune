    <!--  Default styles (marker)  -->

    <DataTemplate x:Key="CircleMarker">
        <Ellipse Width="8"
                 Height="8"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />
    </DataTemplate>

    <DataTemplate x:Key="SquareMarker">
        <Rectangle Width="7"
                   Height="7"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
    </DataTemplate>

    <DataTemplate x:Key="DiamondMarker">
        <Path Width="10"
              Height="10"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Data="M5,1 9,5 5,9 1,5 Z"
              Stretch="Uniform" />
    </DataTemplate>

    <DataTemplate x:Key="LeftFlagMarker">
        <Path Width="9"
              Height="12"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom"
              Data="M0,12 0,0 9,4 0,9 Z"
              Stretch="UniformToFill">
            <Path.RenderTransform>
                <TranslateTransform X="-0.5" />
            </Path.RenderTransform>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="RightFlagMarker">
        <Path Width="9"
              Height="12"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Data="M9,12 9,0 0,4 9,9 Z"
              Stretch="UniformToFill">
            <Path.RenderTransform>
                <TranslateTransform X="0.5" />
            </Path.RenderTransform>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="CrossOrthogonalMarker">
        <Path Width="10"
              Height="10"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Data="M0,3.5 3.5,3.5 3.5,0 6.5,0 6.5,3.5 10,3.5 10,6.5 6.5,6.5 6.5,10 3.5,10 3.5,6.5 0,6.5 Z"
              Stretch="Uniform" />
    </DataTemplate>

    <DataTemplate x:Key="CrossDiagonalMarker">
        <Path Width="9"
              Height="9"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Data="M0,2 2,0 4,2 6,0 8,2 6,4 8,6 6,8 4,6 2,8 0,6 2,4 Z"
              Stretch="Uniform" />
    </DataTemplate>

    <DataTemplate x:Key="TriangleUpMarker">
        <Path Width="8"
              Height="8"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Data="M5,0 10,10 0,10 Z"
              Stretch="Fill">
            <Path.RenderTransform>
                <TranslateTransform Y="-1" />
            </Path.RenderTransform>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="TriangleDownMarker">
        <Path Width="8"
              Height="8"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Data="M0,0 10,0 5,10 Z"
              Stretch="Fill">
            <Path.RenderTransform>
                <TranslateTransform Y="1" />
            </Path.RenderTransform>
        </Path>
    </DataTemplate>


